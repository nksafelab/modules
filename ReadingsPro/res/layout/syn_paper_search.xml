<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_marginTop="8px">
	<LinearLayout android:layout_width="0px"
		android:layout_height="0px" android:focusable="true"
		android:focusableInTouchMode="true"></LinearLayout>
	<EditText android:id="@+id/syn_paper_search_Edit"


		android:layout_width="240px" android:layout_height="40px"
		android:singleLine="true" android:textSize="30px"


		android:drawableLeft="@drawable/search_pic" android:focusable="false"


		android:layout_gravity="center_vertical" android:layout_marginLeft="195px"

		android:background="@drawable/searchtextview_bg" />
	<Button android:id="@+id/syn_paper_searchButton"
		android:layout_width="120px" android:layout_height="50px"
		android:background="@drawable/search" android:layout_gravity="center_vertical"
		android:layout_marginLeft="15px" android:layout_marginRight="10px"></Button>

</LinearLayout>