		 android:layout_width="537px"
		   android:layout_height="780px"
		   android:layout_marginTop="77px"
		   android:layout_marginLeft="32px"
		>
	</FrameLayout>
</LinearLayout>

<include  layout="@layout/menu"></include>

</LinearLayout>