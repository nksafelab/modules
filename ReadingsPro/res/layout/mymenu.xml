<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="600px" android:orientation="vertical"
	android:layout_height="964px"
	> 
	
<LinearLayout
	android:layout_width="600px" android:orientation="vertical"
	android:layout_height="914px"
	android:background="@drawable/cmainui_bg">

				<RelativeLayout
		        	android:orientation="horizontal"
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:padding="1dp"
		        >
		        
		        <!-- 
				        <ImageView
				        	android:id="@+id/logo"
				        	android:src="@drawable/logo"
				        	android:layout_width="wrap_content"
				        	android:layout_height="90px"
				        ></ImageView>
				        
				         -->
				      
				        <LinearLayout 
							android:layout_marginBottom="0dp"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content" 
				        	
				        	
				        	android:layout_centerHorizontal="true"
				        	android:paddingBottom="0dp"
							
							>
							<Button android:id="@+id/recent"
							
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content"
								
								android:background = "@drawable/recentreading"
								android:layout_marginRight="50px"
								
								android:visibility="gone"
								
								/>
							<Button android:id="@+id/push" 
							
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content"
								
								android:background="@drawable/push"
								android:layout_marginRight="50px"
																android:visibility="gone"
								
								/>
							<Button android:id="@+id/request"
							
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content"
								
								android:background="@drawable/requestbook"
															
								android:visibility="gone"
								/>
						</LinearLayout>
		      </RelativeLayout> 
		      
		      
<include  layout="@layout/search"></include>

	<!--tabhost 主体-->
	<FrameLayout android:id="@+id/portrait_containerBody"
