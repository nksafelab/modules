<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="180px"
	android:background="@drawable/listview_bg"
	
	android:descendantFocusability= "blocksDescendants"
	>

	<ImageView
		android:id="@+id/side"  
		android:layout_alignParentLeft="true"
		android:layout_width="1px"
		android:layout_height="180px" 
		android:layout_margin="3px"/>

	<ImageView android:id="@+id/img" 
		android:src="@drawable/default_book"
		android:layout_toRightOf="@id/side"
		android:layout_centerInParent="true"
		android:layout_marginLeft="5px"
		android:layout_width="92px"
		android:layout_height="112px" 
		android:layout_margin="5px"/>

<LinearLayout
android:layout_toRightOf="@id/img"
android:orientation="vertical"
android:id="@+id/layout1"
	android:layout_width="fill_parent"
	android:layout_height="180px"
>
		<LinearLayout
android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="135px"
>
		<TextView android:id="@+id/title" 
			android:layout_toRightOf="@id/img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_alignTop="@id/img"
			android:textColor="#ffffff"
			android:textSize="22px" 
			android:layout_margin="5px"
			
			/>
		<TextView android:id="@+id/source" 
			android:layout_toRightOf="@id/img"
			android:layout_below="@id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ffffff"
			android:textSize="19px" 
			android:layout_margin="5px"
			/>
		<TextView android:id="@+id/info" 
			android:layout_toRightOf="@id/img"
			android:layout_below="@id/source"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:textColor="#ffffff"
			android:textSize="19px" 
			
			android:layout_marginTop="10px"
			android:layout_margin="5px"
			/>
			</LinearLayout>
			<LinearLayout
android:orientation="horizontal"
android:id="@+id/layout2"
	android:layout_width="fill_parent"
	android:layout_height="45px"
>
		<Button android:id="@+id/view_btn"
		android:layout_marginLeft="330px"
		
			android:layout_width="90px"
			android:layout_height="45px"
			android:background="@drawable/read" 
			android:layout_marginRight="40px"
			
			android:focusable="false"
			
			android:visibility="gone"
			
			/>
			</LinearLayout>
			</LinearLayout>
</RelativeLayout>