<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        	android:layout_marginLeft="40px"
        		android:text="标题"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	<EditText
        		android:id="@+id/request_book_title"
        		android:layout_width="400px"
        		android:layout_height="wrap_content"
        	></EditText>
        </LinearLayout>
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        	android:layout_marginLeft="40px"
        		android:text="作者"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	<EditText
        		android:id="@+id/request_book_author"
        		android:layout_width="400px"
        		android:layout_height="wrap_content"
        	></EditText>
        </LinearLayout>
        
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        	android:layout_marginLeft="40px"
        	android:text="简介"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	<EditText
        		android:id="@+id/request_book_abst"
        		android:layout_width="400px"
        		android:layout_height="wrap_content"
        	></EditText>
        </LinearLayout>
        
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        	android:layout_marginLeft="40px"
        		android:text="花费积分"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	<EditText
        		android:id="@+id/request_book_cost"
        		android:layout_width="400px"
        		android:layout_height="wrap_content"
        	></EditText>
        </LinearLayout>
        
         <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        		android:layout_marginLeft="40px"
        		android:text="分类"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	 <Spinner 
		        android:layout_height="wrap_content" 
		        android:layout_width="400px" 
		        android:id="@+id/Spinner01" ></Spinner>
        </LinearLayout>
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<TextView
        		android:layout_marginLeft="40px"
        		android:text="标签"
        		android:layout_width="150px"
        		android:layout_height="wrap_content"
        	></TextView>
        	<EditText
        		android:id="@+id/request_book_tags1"
        		android:layout_width="400px"
        		android:layout_height="wrap_content"
        	></EditText>
        </LinearLayout>
        
        
        <LinearLayout
        	android:orientation="horizontal"
        	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
        >
        	<Button
        		android:id="@+id/request_book_requestBtn"
        		android:text="求书"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="100px"
        	></Button>
        	<Button
        		android:id="@+id/request_book_resetBtn"
        		android:text="重置"
        		android:visibility= "gone"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginRight="100px"
        	></Button>
        </LinearLayout>
       
    </LinearLayout>